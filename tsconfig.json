{
    "compilerOptions": {
        "baseUrl": "src",
        "target": "es2016",
        "module": "esnext",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "nodenext",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "declaration": true,
        "declarationDir": "dist",
        "jsx": "react"
    },
    "include": ["src"],
    "exclude": ["dist", "docs", "node_modules"]
}
